#include <iostream>

using namespace std;

struct node
{
	int x;
	struct node *next;
};

struct node *enqueue = NULL; // Fila VAZIA
struct node *dequeue = NULL;

void add(int x)
{
	/*
	struct node *newNode = new struct node;
	(*newNode).next = NULL;
	(*newNode).x = x;
	
	if (enqueue == NULL)
	{
		dequeue = newNode;
		enqueue = newNode;
	}
	else
	{
		(*dequeue).next = newNode;
		dequeue = newNode;
	}     
	*/
	
	if (enqueue == NULL)
	{
		struct node *newNode = new struct node;
		enqueue = newNode;
		dequeue = newNode;
		(*newNode).next = NULL;
	}
	else
	{
		struct node *newNode = new struct node;
		(*dequeue).next = newNode;
		(*newNode).next = NULL;
		dequeue = newNode;
	}
	
}

void remove()
{

}

void traverse()
{

}

bool running = true;

int main()
{
	int option;
	cout << "MENU" << endl;
	cout << "1 - Add" << endl;
	cout << "2 - Remove" << endl;
	cout << "3 - Traverse Stack" << endl;
	cout << "4 - Exit" << endl;

	while (running)
	{
		do
		{
			cout << "Input: ";
			cin >> option;
		} while (option != 1 && option != 2 && option != 3 && option != 4);

		switch (option)
		{
		case 1:
			int key;
			cout << "Input key: ";
			cin >> key;
			add(key);
			break;
		case 2:
			remove();
			break;
		case 3:
			traverse();
			break;
		case 4:
			running = false;
			break;
		}
	}

	system("pause");
	return 0;
}
